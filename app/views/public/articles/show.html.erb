<h1>詳細</h1>
<h2><%= @article.name %></h2>
<%= attachment_image_tag(@article, :image, :fill, 300, 300) %>
<%= @article.prefecture_name %>
<%= @article.address_city %>
<%= @article.address_street %>
<%= @article.address_building %>
<%= @article.site_url %>
<%= @article.tax %>
<%= @article.opening_hours %>
<%= @article.closed %>
<%= @article.introduction %>

  <% if @article.stamped_by?(current_user) %>
    <p>
      <%= link_to article_stamps_path(@article), method: :delete do %>
        ○
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to article_stamps_path(@article), method: :post do %>
        ✖
      <% end %>
    </p>
  <% end %>

  <% if @article.favorited_by?(current_user) %>
    <p>
      <%= link_to article_favorites_path(@article), method: :delete do %>
        ♥<%= @article.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to article_favorites_path(@article), method: :post do %>
        ♡<%= @article.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>


  <%= link_to 'Edit', edit_article_path(@article) %>
 

<div class="comments">
<p>コメント件数：<%= @article.comments.count %></p>
<% @article.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d') %>
  <%= comment.body %>
  <% if comment.user == current_user %>
  <div class="comment-delete">
    <%= link_to "削除", article_comment_path(comment.article, comment), method: :delete %>
  </div>
  <% end %>
<% end %>
</div>
<div class="new-comment">
<%= form_with(model:[@article, @comment], local: true) do |f| %>
  <%= f.text_area :body, rows:'5',placeholder: "コメントをここに" %>
  <%= f.submit "送信する" %>
<% end %>
</div>