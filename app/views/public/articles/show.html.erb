<div class="article-show">
  <div class="article-show-top">
    <h1 class="article-show-title"><%= @article.name %></h1>
    <div id="star-rate-<%= @article.id %>">総合評価　</div>
      <script>
      $('#star-rate-<%= @article.id %>').raty({
        size: 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        readOnly: true,
        score: <%= @article.comments.average(:rate).to_f.round(1) %>,
      });
      </script>

      <% if user_signed_in? %>
      <p class="favorite-btn"><%= render "public/favorites/favorite-btn", article: @article %></p>
      <% end %>
  </div>
  <div class="article-show-image">
    <%= attachment_image_tag(@article, :image, :fill, 250, 250) %>
    <div class="article-show-image-contents">
      <% if user_signed_in? %>
      <p class="stamp-btn"><%= render "public/stamps/stamp-btn", article: @article %></p>
      <% end %>
    </div>
  </div>

  <table class="article-show-information">
    <tr>
      <td>住所</td>
      <td>
        <%= @article.prefecture_name %>
        <%= @article.prefecture_code %>
        <%= @article.address_city %>
        <%= @article.address_street %>
        <%= @article.address_building %>
      </td>
    </tr>
    <tr>
      <td>公式サイト</td>
      <td><%= @article.site_url %></td>
    </tr>
    <tr>
      <td>料金説明</td>
      <td><%= @article.tax %></td>
    </tr>
    <tr>
      <td>営業時間</td>
      <td><%= @article.opening_hours %></td>
    </tr>
    <tr>
      <td>定休日</td>
      <td><%= @article.closed %></td>
    </tr>
    <tr>
      <td>その他</td>
      <td><%= @article.introduction %></td>
    </tr>
    <td></td>
    <td><%= link_to '編集', edit_article_path(@article), class: "article-show-edit" %></td>
  </table>
 
