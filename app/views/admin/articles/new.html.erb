<h1>新規投稿( 管理者側)</h1>
  <% if @article.errors.any? %>
  <div id="error_explanation">
   <ul>
    <%= @article.errors.count %>errors prohibited this book from being saved:
     <% @article.errors.full_messages.each do |message| %>
      <li>
       <%= message %>
      </li>
     <% end %>
    <% end %>
   </ul>
  </div>
<%= form_with model: @article,url: admin_articles_path,local: true do |f| %>
  <table>
    <tr class="field">
      <label for="name">名前</label>
      <%= f.text_field :name, autofocus: true, class: "name" %>
    </tr>
    <tr class="actions">
      <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success' %>
    </tr>
  </table>
<% end %>