<% if article.favorited_by?(current_user) %>
  <%= link_to article.favorites.count, article_favorites_path(article.id), method: :delete, remote: true, class: "fas fa-thumbs-up" %>
<% else %>
  <%= link_to article.favorites.count, article_favorites_path(article.id), method: :post, remote: true, class: "far fa-thumbs-up" %>
<% end %>
