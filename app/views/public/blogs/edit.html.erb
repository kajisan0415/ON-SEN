<%= form_with model: @blog,url: blog_path,local: true do |f| %>
<table>
    <div class="form-group">
        <p><%= f.label :タイトル %>
        <%= f.text_field :title, autofocus: true, class: "title" %></p>
    </div>
    <div class="form-group">
        <p><%= f.label :画像 %>
        <%= f.attachment_field :image, class: "blog_image" %></p>
    </div>
    <div class="form-group">
        <p><%= f.label :内容 %>
        <%= f.text_field :body, autofocus: true, class: "body" %></p>
    </div>
    <div class="form-group">
        <p><%= f.label :メモ %>
        <%= f.text_field :memo, autofocus: true, class: "memo" %></p>
    </div>
    <tr class="actions">
      <%= f.submit "変更" ,class: 'btn btn-sm btn-success' %>
    </tr>
</table>
<% end %>