<!DOCTYPE html>
<html>
  <head>
    <title>ONSen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= include_gon %>
　　<script src="https://kit.fontawesome.com/4a4fca51eb.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!--ホーム画面でロード画面を表示-->
  <% if current_page?(root_path) %>
    <div id="splash">
      <div id="splash_logo"><%= (image_tag 'My Post (14).png', class: "d-block w-100 fadeUp") %></div>
    </div>
    <%= render 'layouts/header' %>
    <%= yield %>
  <% else %>
    <%= render 'layouts/header' %>
    <main><%= yield %></main>
  </body>
  <% end %>
</html>
