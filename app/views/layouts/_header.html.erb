<header>
<nav class="navbar-left">
  <div class="logo"><%= link_to (image_tag 'My Post (9).png'),root_path, class: "logo-img" %></div>
</nav>
<nav class="navbar-right">
    <% if user_signed_in? %>
    <!--ユーザログイン後-->
      <li><%= link_to 'マップ検索', mapping_path, class:"nav-list-item" %></li>
      <li><%= link_to 'マイページ', user_path(current_user), class:"nav-list-item" %></li>
      <li><%= link_to '一覧', articles_path, class:"nav-list-item" %></li>
      <li><%= link_to '記録', calender_user_path(current_user), class:"nav-list-item" %></li>
