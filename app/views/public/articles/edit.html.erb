<%= render 'layouts/errors', obj: @article %>
<div class="devise-container">
<h1>編集</h1>
<!--エンドユーザ側投稿編集フォーム-->
<%= form_with model: @article,url: article_path,local: true do |f| %>
<table>
    <div class="form-group">
        <p><%= f.label :外観画像 %>
        <%= f.attachment_field :image, class: "form-control-file product_image" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :名前 %>
        <%= f.text_field :name, autofocus: true, class: "name" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :市町村名 %>
        <%= f.text_field :address_city, autocomplete: 'address_city', class: 'address_city' %></p>
    </div>


    <div class="form-group">
        <p><%= f.label :公式サイト %>
        <%= f.text_field :site_url, autofocus: true, class: "site_url" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :料金説明 %>
        <%= f.text_area :tax, autofocus: true, class: "tax" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :営業時間 %>
        <%= f.text_field :opening_hours, autofocus: true, class: "opening_hours" %></p>
    </div>

    <div class="form-group">
        <p><%= f.label :その他 %>
        <%= f.text_area :introduction, autofocus: true, placeholder: "説明文を記述", class: "introduction" %></p>
    </div>

    <div class="form-group">
      <%= f.submit "更新" ,class: 'btn btn-sm btn-success' %>
    </div>
  </table>
<% end %>
</div>